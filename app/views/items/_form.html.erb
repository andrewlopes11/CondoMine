<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nome, style: "display: block" %>
    <%= form.text_field :nome %>
  </div>

  <div>
    <%= form.label :estado, style: "display: block" %>
    <%= form.text_field :estado %>
  </div>

  <div>
    <%= form.label :tipo, style: "display: block" %>
    <%= form.text_field :tipo %>
  </div>

  <div>
    <%= form.label :data_entrada, style: "display: block" %>
    <%= form.date_field :data_entrada %>
  </div>

  <div class="field">
    <%= form.label :ambiente_id %>
    <%= form.collection_select :ambiente_id, Ambiente.all, :id, :nome, prompt: "Selecione um Ambiente" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
